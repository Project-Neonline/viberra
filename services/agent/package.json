  "license": "Apache-2.0",
  "repository": {
    "type": "git",
    "url": "https://github.com/Project-Neonline/viberra.git",
    "directory": "services/agent"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "preferGlobal": true,
  "dependencies": {
    "@roamhq/wrtc": "^0.9.1",
    "@xterm/headless": "^5.5.0",
    "libsodium-wrappers-sumo": "^0.7.15",
    "node-pty": "^1.0.0",
    "qrcode-terminal": "^0.12.0",
    "simple-peer": "^9.11.1",
    "winston": "^3.18.3",
    "ws": "^8.18.0"
  }
