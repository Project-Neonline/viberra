{
  "name": "viberra",
  "version": "0.2.2",
  "description": "Secure P2P terminal access - end-to-end encrypted WebRTC, no SSH, VPNs or port forwarding",
  "type": "module",
  "bin": {
    "viberra-agent": "./bin/viberra-agent.mjs",
    "viberra": "./bin/viberra-agent.mjs",
    "vibe": "./bin/viberra-agent.mjs"
  },
  "scripts": {
    "start": "node ./bin/viberra-agent.mjs",
    "postinstall": "echo 'viberra installed! Run: viberra --help'"
  },
  "keywords": [
    "terminal",
    "pty",
    "webrtc",
    "remote-terminal",
    "cli",
    "agent",
    "e2ee"
  ],
